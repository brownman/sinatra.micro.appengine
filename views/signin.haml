#signin
	%form#default-form{:action => '/signin', :method => 'post'}
		%fieldset
			%label Email
			%input{:class => 'text', :type => 'text', :name => 'email'}
			.clear
			%label Password
			%input{:class => 'text', :type => 'password', :name => 'password'}
			.clear
			- if @next_url
				%input{:type => 'hidden', :name => 'next_url', :value => @next_url}
			
		%div{:class => 'right'}
			%button.button{:type => 'submit'}
				%span Sign in

